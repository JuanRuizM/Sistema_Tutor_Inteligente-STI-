@model STI.Models.ejercicios

@{
    ViewData["Title"] = "Crear";
}

<h2>Crear</h2>

<h4>ejercicios</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nombre_ejercicio" class="control-label"></label>
                <input asp-for="nombre_ejercicio" class="form-control" />
                <span asp-validation-for="nombre_ejercicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="puntaje" class="control-label"></label>
                <input asp-for="puntaje" class="form-control" />
                <span asp-validation-for="puntaje" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_temas" class="control-label"></label>
                <input asp-for="id_temas" class="form-control" />
                <span asp-validation-for="id_temas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Ir a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
