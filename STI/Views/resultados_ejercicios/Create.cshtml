@model STI.Models.resultados_ejercicios

@{
    ViewData["Title"] = "Crear";
}

<h2>Crear</h2>

<h4>resultados_ejercicios</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="acierto" /> @Html.DisplayNameFor(model => model.acierto)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="id_ejercicio" class="control-label"></label>
                <input asp-for="id_ejercicio" class="form-control" />
                <span asp-validation-for="id_ejercicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_usuario" class="control-label"></label>
                <input asp-for="id_usuario" class="form-control" />
                <span asp-validation-for="id_usuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fecha" class="control-label"></label>
                <input asp-for="fecha" class="form-control" />
                <span asp-validation-for="fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Ir a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
